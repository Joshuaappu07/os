#include <stdio.h>
#include <stdlib.h> 
int main() 
{
int f[50], i, st, j, len, c;
for(i = 0; i < 50; i++)
f[i] = 0;
do {
printf("\nEnter the starting block & length of file: ");
scanf("%d %d", &st, &len);
if (st + len > 50) {
printf("Error: File exceeds disk capacity!\n");
} else {
int allocated = 1;
for(j = st; j < (st + len); j++) {
if(f[j] != 0) {
printf("\nBlock %d already allocated. Allocation failed!", j);
allocated = 0;
break;
}
}
if(allocated) {
for(j = st; j < (st + len); j++) {
f[j] = 1;
printf("\n%d -> %d", j, f[j]);
}
printf("\nThe file is allocated to disk.\n");
}
}
printf("\nDo you want to enter more files? (Yes-1 / No-0): ");
scanf("%d", &c);
} while(c == 1);
return 0;
}



